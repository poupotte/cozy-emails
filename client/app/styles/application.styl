// Stylus mixins
@import 'nib'

// Cozy default stuff
@import '_colors'
@import '_base'
@import '_cozy'

// Animations (for transitions), must be imported before custom styles
@import '_animations'

// UI skeleton positionning
@import '_layout'

// Components styles
@import '_account-config'
@import '_conversation'
@import '_file-picker'
@import '_menu'
@import '_message-list'
@import '_quick-actions-bar'

// tweaks fontawesome icons
* > .fa-compress
    transform rotate(45deg)


/*
  Put styles here for scaffolding and testing out new features/stuff
  "Production-ready" components styles should live in a dedicated file
*/

#quick-actions
    &> div
        padding 0


    form
        display table

        .dropdown
        .form-group
            display table-cell

        .dropdown
            max-width 30%
        .form-group
            max-width 70%
            padding-left 10px


/*
  Contextual actions
*/
#contextual-actions
    padding 0

    .mailbox-config
    &.fade-enter
        animation fadeIn animationDuration ease

    &.fade-leave
        animation fadeIn animationDuration ease reverse

/*
  new email window
*/
#email-compose

    &.enable
        display block

    &.col-md-6
    &.col-md-12
        transition width 0.2s ease-out

    h3
        color #444
        margin-top 0

    a
        color basecolor

    a.close-email
        margin-right 15px

    a.expand
        float right
        font-size 25px


#email-compose
  .editor
    border 1px solid #444
    min-height 250px
    width 100%
    text-align left
    color black

  .attachements
      margin 1em 0

  .compose-toggle
    float: right

  .compose-cc,
  .compose-bcc
    display: none

  .compose-cc.shown,
  .compose-bcc.shown
    display: inherit
/*
  Open email tabs

  -- disabled because of the ugly scrollbar on most computers
*/
.conversation .nav
    display block
    margin-bottom 30px

    overflow auto

    li
        position relative

        &:not(.active)
            max-width 150px
            a
                color mediumcolor
        a
            overflow hidden
            white-space nowrap
            text-overflow ellipsis

            border none
            border-bottom 1px solid basecolor
            margin 0

            &:hover
                color mediumcolor-contrast

        .close
            position absolute
            top 0
            right 0

        &.active a
        a:hover
            border-radius 0
            border none
            border-bottom 4px solid basecolor

/*
  EDITOR

  --
*/

.rt-editor

    min-height 4em
    height auto

    blockquote
        border-left 3px solid blue
        padding-left .5em
        margin 0

    div
    p
        margin .5em 0
